/**app.wxss**/
page{
  background-color: white;
  font-size: 32rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: content-box;
}
.add_btn{
  position: fixed;
  bottom: 80px;
  right: 40px;
  width: 40px;
  height: 40px;
  background-color: #DEA681;
  color: white;
  font-size: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  box-shadow: 0px 0px 4px #cdcdcd;
}
.screen{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: #5a5a5a;
  opacity: 0.6;
}