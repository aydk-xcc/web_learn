/* pages/my/index/index.wxss */
page{
  height: 100%;
  background-color: #f0f0f0;
}
.header{
  background-color: #DEA681;
  height: 160px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  color: white;
  font-size: 32rpx;
}
.header image{
  height: 60px;
  width:60px;
  border-radius: 5px;
  border: 2px white solid;
  margin-bottom: 8px;
}
.item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  background-color: white;
  width: 100%;
  margin-bottom: 8px;
  padding: 0px 12px;
  box-sizing: border-box;
}
.item image{
  height: 20px;
  width: 20px;
}
.btn{
  background-color: #DEA681;
  border-radius: 0px;
  border: none;
  font-size: 32rpx;
  height: 40px;
  line-height: 40px;
  color: white;
}
.btn::after{
  border: none;
}
.sign{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50px;
  font-size: 28rpx;
  color: #8a8a8a;
  flex-direction: column;
}